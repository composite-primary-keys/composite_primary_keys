source 'https://rubygems.org'

gem 'activerecord', '~> 6.0.0.beta3'
gem 'rake'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]

group :db2 do
  gem 'ibm_db'
end

group :mysql do
  gem 'mysql2'
end

group :oracle do
  gem 'ruby-oci8'
  gem 'ruby-plsql'
  gem 'activerecord-oracle_enhanced-adapter'
end

group :postgresql do
  gem 'pg'
end

group :sqlite do
  gem 'sqlite3'
end

group :sqlserver do
  gem 'activerecord-sqlserver-adapter'
end

group :test do
  gem 'minitest'
end
